<p id="notice"><%= notice %></p>

<h1>Mesas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Numero maximo votantes</th>
      <th>Direccion blockchain</th>
      <th>Recinto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mesas.each do |mesa| %>
      <tr>
        <td><%= mesa.nombre %></td>
        <td><%= mesa.numero_maximo_votantes %></td>
        <td><%= mesa.direccion_blockchain %></td>
        <td><%= mesa.recinto %></td>
        <td><%= link_to 'Show', mesa %></td>
        <td><%= link_to 'Edit', edit_mesa_path(mesa) %></td>
        <td><%= link_to 'Destroy', mesa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

