 
<center>
<h1>Mesas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th> 
      <th>Pertenece al recinto</th>
      <th>Pertenece al sector</th>
      <th>Pertenece al departamento</th>
      <th>El encargado es:</th>
    </tr>
  </thead>

  <tbody>
    <% @mesas.each do |mesa| %>
      <tr>
        <td><%= mesa.id %></td>
        <td><%= mesa.recinto.nombre %></td>
        <td><%= mesa.recinto.sector.nombre %></td>
        <td><%= mesa.recinto.sector.departamento.nombre %></td>
        <td><%= mesa.nombre_encargado %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</center>
<br>
